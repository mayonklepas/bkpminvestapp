<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/img"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/imglabel"
                android:textStyle="bold"
                android:textColor="#777"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="11dp"
                android:layout_below="@+id/img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="keterangan"
                android:id="@+id/imgketerangan"
                android:textColor="#777"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal"
                android:textSize="11dp"
                android:layout_below="@+id/imglabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="alamat"
                android:id="@+id/imgalamat"
                android:textColor="#735"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal"
                android:textSize="10dp"
                android:layout_below="@+id/imgketerangan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="9dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rate"
                android:rating="4"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Strategis : "
                android:id="@+id/textView7"
                android:textColor="#735"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal"
                android:textSize="10dp"
                android:layout_below="@+id/imgalamat"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4,5"
                android:id="@+id/lrate"
                android:textColor="#735"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal"
                android:textSize="10dp"
                android:layout_alignBottom="@+id/rate"
                android:layout_toRightOf="@+id/rate"
                android:layout_toEndOf="@+id/rate" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>